<Page x:Class="WpfApp2.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="EditPage">
    <ScrollViewer>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Название" Margin="10" Grid.Column="0" Grid.Row="0"></Label>
        <Label Content="Тип партнера" Margin="10" Grid.Column="0" Grid.Row="1"></Label>
        <Label Content="Фамилия директора" Margin="10" Grid.Column="0" Grid.Row="2"></Label>
        <Label Content="Имя директора" Margin="10" Grid.Column="0" Grid.Row="3"></Label>
        <Label Content="Отчество диреткора" Margin="10" Grid.Column="0" Grid.Row="4"></Label>
        <Label Content="Почта" Margin="10" Grid.Column="0" Grid.Row="5"></Label>
        <Label Content="Телефон" Margin="10" Grid.Column="0" Grid.Row="6"></Label>
        <Label Content="Адресс" Margin="10" Grid.Column="0" Grid.Row="7"></Label>
        <Label Content="ИНН" Margin="10" Grid.Column="0" Grid.Row="8"></Label>
        <Label Content="Рейтинг" Margin="10" Grid.Column="0" Grid.Row="9"></Label>

        <TextBox x:Name="Partner_nameTextBox" Margin="10" Grid.Column="1" Grid.Row="0"></TextBox>
        <ComboBox x:Name="Partner_type_ComboBox" Margin="10" Grid.Column="1" Grid.Row="1"></ComboBox>
        <TextBox x:Name="Familia_directorTextBox" Margin="10" Grid.Column="1" Grid.Row="2"></TextBox>
        <TextBox x:Name="Name_directorTextBox" Margin="10" Grid.Column="1" Grid.Row="3"></TextBox>
        <TextBox x:Name="Othestvo_directorTextBox" Margin="10" Grid.Column="1" Grid.Row="4"></TextBox>
        <TextBox x:Name="EmailTextBox" Margin="10" Grid.Column="1" Grid.Row="5"></TextBox>
        <TextBox x:Name="TelephoneTextBox" Margin="10" Grid.Column="1" Grid.Row="6"></TextBox>
        <TextBox x:Name="AdressTextBox" Margin="10" Grid.Column="1" Grid.Row="7"></TextBox>
        <TextBox x:Name="InnTextBox" Margin="10" Grid.Column="1" Grid.Row="8"></TextBox>
        <TextBox x:Name="ReitingTextBox" Margin="10" Grid.Column="1" Grid.Row="9"></TextBox>

        <Button x:Name="SaveButton" Click="SaveButton_Click" Margin="10" Grid.Column="1" Grid.Row="10" Content="Сохранить"></Button>
        <Button x:Name="BackButton" Click="BackButton_Click" Margin="10" Grid.Column="1" Grid.Row="11" Content="Назад"></Button>
    </Grid>
    </ScrollViewer>
</Page>
